

CREATE KEYSPACE test_gs with replication = { 'class' : 'SimpleStrategy', 'replication_factor' : 1 };


create table test_gs.note(
    noteid      uuid,
    userid      uuid,
    content     text,
    created     timestamp,
    PRIMARY KEY (noteid, created));



